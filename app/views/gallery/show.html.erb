<h4 class="card-title mt-3 text-center">
  <%= @picture_gallery.category %>
</h4>
<div class="row">
  <div class="col-md-3">
    <%= form_with model: @picture_gallery, url: gallery_index_path do |form| %>
      <div class="custom-file ml-2 mb-2">
        <%= form.file_field :image, class: "custom-file-input", data: {'image-file': true}%>
        <%= form.label :image, "Додати картинку до галереї", class: "custom-file-label", data: {'image-label': true} %>
      </div>

      <div class="form-group ml-2">
        <button type="submit" class="btn btn-primary btn-block">Створити </button>
      </div>                                                                      
    <%end%>
  </div>
  
  <div class="col-md-9">
    
  </div>
</div>
