<article class="card-body mx-auto" style="max-width: 500px;">
  <h4 class="card-title mt-3 text-center">Створіть свою категорію для галереї</h4>
  <%= form_with model: @picture_gallery, url: gallery_index_path do |form| %>
    <div class="form-group input-group">
      <div class="input-group-prepend">
        <span class="input-group-text"> <i class="fa fa-user"></i> </span>
      </div>
      <%= form.text_field :category, class: "form-control", placeholder: "travel"%>
    </div>
    <% flash.each do |key, message| %>
      <p><%= message.first %></p>
    <% end %>    
    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-block">Створити </button>
    </div>                                                                      
  <%end%>
</article>
